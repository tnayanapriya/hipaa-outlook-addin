<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp">

  <Id>f8d2f1c9-3f1a-4a2d-9b77-hipaa-reminder</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Innobot</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="HIPAA Reminder Add-in"/>
  <Description DefaultValue="Warns before sending emails containing HIPAA-sensitive data."/>
  <IconUrl DefaultValue="https://tnayanapriya.github.io/hipaa-outlook-addin/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://tnayanapriya.github.io/hipaa-outlook-addin/icon.png"/>
  <SupportUrl DefaultValue="https://tnayanapriya.github.io/hipaa-outlook-addin"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Modern manifest section needed for event-based add-ins -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    Version="1.0.0.0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.8">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- The "function file" (loads office.js + your code) -->
          <FunctionFile resid="residFunctionFileUrl"/>
          <!-- Intercept Send -->
          <ExtensionPoint xsi:type="Events">
            <Event Type="ItemSend" FunctionName="onMessageSend"/>
            <!-- Optional: also run on reply/forward etc. ItemSend covers all sends -->
          </ExtensionPoint>
          <!-- Scope (messages) -->
          <Rule xsi:type="RuleCollection" Mode="Or">
            <Rule xsi:type="ItemIs" ItemType="Message" FormType="ReadOrCompose"/>
          </Rule>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="residFunctionFileUrl" DefaultValue="https://tnayanapriya.github.io/hipaa-outlook-addin/functions.html"/>
        <bt:Url id="residDialogUrl" DefaultValue="https://tnayanapriya.github.io/hipaa-outlook-addin/modal.html"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="residIcon" DefaultValue="https://tnayanapriya.github.io/hipaa-outlook-addin/icon.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="residDisplayName" DefaultValue="HIPAA Reminder Add-in"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="residDescription" DefaultValue="Warns before sending emails containing HIPAA-sensitive data."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
